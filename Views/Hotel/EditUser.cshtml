@{
}
<form method="post" enctype="multipart/form-data">
    <label asp-for="Id" class="form-label"></label>
    <input asp-for="Id" class="form-control" type="hidden" placeholder="@Model.Id" />
    <span asp-validation-for="Id"></span>
    <label asp-for="UserName" class="form-label"></label>
    <input asp-for="UserName" class="form-control" type="text" placeholder="@Model.UserName" />
    <span asp-validation-for="FirstName"></span>
    <label asp-for="FirstName" class="form-label"></label>
    <input asp-for="FirstName" class="form-control" type="text" placeholder="@Model.FirstName" />
    <span asp-validation-for="FirstName"></span>
    <label asp-for="LastName" class="form-label"></label>
    <input asp-for="LastName" class="form-control" type="text" placeholder="@Model.LastName" />
    <span asp-validation-for="LastName"></span>
    <label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" class="form-control" type="text" placeholder="@Model.Email" />
    <span asp-validation-for="Email"></span>
    <label asp-for="PhoneNumber" class="form-label"></label>
    <input asp-for="PhoneNumber" class="form-control" type="text" placeholder="@Model.PhoneNumber" />
    <span asp-validation-for="PhoneNumber"></span>
    <label class="form-label">Roles</label>
    <select name="Roles" class="form-select"  asp-items="@ViewBag.roles"></select>


    <input asp-action="EditUser" type="submit" class="btn btn-primary center-btn" style="background-color:#F12954;" value="submit Changes">
</form>